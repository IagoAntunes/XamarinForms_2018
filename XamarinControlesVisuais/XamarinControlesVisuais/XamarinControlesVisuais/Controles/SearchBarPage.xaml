             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinControlesVisuais.Controles.SearchBarPage">
    <ContentPage.Content>
        <StackLayout>
            <!--TextChanged="Pesquisar"-->
            <SearchBar TextChanged="Pesquisar"
                       CancelButtonColor="Red"
                       FontSize="24"
                       FontAttributes="Italic"
                       HorizontalTextAlignment="Center"
                       Placeholder="Digite aqui . . ."
                       PlaceholderColor="Black"
                       SearchButtonPressed="PesquisarButton">
                
                
            </SearchBar>
            <StackLayout x:Name="listResult">
                
                
                
                
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>